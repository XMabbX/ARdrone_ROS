<launch>
<node name="ar_pose_bottom" pkg="ar_pose" type="ar_single" respawn="false" output="screen">
  <param name="marker_frame" type="string" value="marker_1"/>
  <param name="marler_pattern" type="string" value="$(find ar_pose)/data/4x4/4x4_8.patt"/>
  <param name="marker_width" type="double" value="152.4"/>
  <param name="marker_center_x" type="double" value="0.0"/>
  <param name="marker_center_y" type="double" value="0.0"/>
  <param name="threshold" type="int" value="100"/>
  <param name="use_history" type="bool" value="true"/>
  <param name="reverse_transform" type="bool" value="true"/>
  <remap from="/ardrone/camera_info" to="/camera/camera_info"/>
  <remap from="/ardrone/image_raw"   to="/camera/image_raw"/>
  <remap from="/ar_pose_marker" to="/ar_pose_marker_bottom"/>
</node>
</launch>
